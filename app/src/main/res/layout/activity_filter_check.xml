<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterCheckActivity">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photoEditorView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:photo_src="@drawable/dummy" />

    <LinearLayout
        android:id="@+id/llText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:weightSum="10">

        <EditText
            android:id="@+id/etLabel"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint="Enter label" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ivDone"
            android:layout_gravity="center"
            android:padding="4dp"
            android:background="@color/cqLegend"
            android:src="@drawable/ic_done_white_24dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
    <ImageButton
        android:id="@+id/btnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cqLegend"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/ic_text_fields_white_24dp"
        android:layout_margin="2dp"
        />

    <ImageButton
        android:id="@+id/btnShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_crop_square_white_24dp"
        android:background="@color/cqLegend"
        android:padding="4dp"
        android:layout_margin="2dp"
        />

    <ImageButton
        android:id="@+id/btnUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_undo_white_24dp"
        android:background="@color/cqLegend"
        android:padding="4dp"
        android:layout_margin="2dp" />

    <ImageButton
        android:id="@+id/btnRedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_redo_white_24dp"
        android:background="@color/cqLegend"
        android:padding="4dp"
        android:layout_margin="2dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@color/cqLegend"
        android:textSize="20sp" />
</LinearLayout>